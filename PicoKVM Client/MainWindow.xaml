<Window x:Class="PicoKVM_Client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:PicoKVM_Client"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    Title="PicoKVM Client" SizeToContent="WidthAndHeight" ResizeMode="NoResize"
    Icon="app.ico"
    WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen"
    Closed="Window_Closed"
    Background="{DynamicResource MaterialDesign.Brush.Background}"
    FontFamily="Microsoft YaHei"
    TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
    TextElement.FontSize="12">

<WindowChrome.WindowChrome>
    <WindowChrome CaptionHeight="36" GlassFrameThickness="0" ResizeBorderThickness="0" CornerRadius="12"/>
</WindowChrome.WindowChrome>

<Border CornerRadius="12" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}" BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryDark" Padding="12,8"
                                  materialDesign:ElevationAssist.Elevation="Dp2">
            <DockPanel>
                <Button DockPanel.Dock="Right" Click="BtnClose_Click"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Padding="8,4" Height="28" Width="36" Foreground="White"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                    <materialDesign:PackIcon Kind="WindowClose" Width="14" Height="14"/>
                </Button>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Monitor" Width="18" Height="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Luckfox PicoKVM Client" FontSize="13" FontWeight="Medium" VerticalAlignment="Center"/>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- 连接面板 -->
        <materialDesign:ColorZone Grid.Row="1" Mode="PrimaryMid" Padding="16,12">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="Web" VerticalAlignment="Center" Margin="0,0,8,0" Width="18" Height="18"/>
                <TextBox x:Name="txtKvmUrl" Width="260" VerticalAlignment="Center"
                         materialDesign:HintAssist.Hint="KVM 地址"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Style="{StaticResource MaterialDesignTextBox}"
                         Margin="0,0,10,0"
                         WindowChrome.IsHitTestVisibleInChrome="True"/>
                <PasswordBox x:Name="pwdPassword" Width="120" VerticalAlignment="Center"
                             materialDesign:HintAssist.Hint="密码"
                             Margin="0,0,12,0"
                             WindowChrome.IsHitTestVisibleInChrome="True"/>
                <Button x:Name="btnConnect" Content="连接" Click="BtnConnect_Click"
                        Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                        Padding="16,4" WindowChrome.IsHitTestVisibleInChrome="True"/>
            </StackPanel>
        </materialDesign:ColorZone>
    </Grid>
</Border>
</Window>
